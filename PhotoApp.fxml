<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.canvas.Canvas?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.ColorPicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="400.0" prefWidth="640.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.niceferrari.photoapp.PhotoController">
  <MenuBar VBox.vgrow="NEVER">
    <Menu mnemonicParsing="false" text="File">
      <MenuItem fx:id="openButton" mnemonicParsing="false" onAction="#openButtonClick" text="Open…" />
      <MenuItem fx:id="closeButton" mnemonicParsing="false" onAction="#closeButtonClick" text="Close" />
      <MenuItem fx:id="saveButton" mnemonicParsing="false" onAction="#saveButtonClick" text="Save" />
      <MenuItem fx:id="saveAsButton" mnemonicParsing="false" onAction="#saveAsButtonClick" text="Save As…" />
      <SeparatorMenuItem mnemonicParsing="false" />
      <MenuItem fx:id="quitButton" mnemonicParsing="false" onAction="#quitButtonClick" text="Quit" />
    </Menu>
      <Menu mnemonicParsing="false" text="Edit" />
      <Menu mnemonicParsing="false" text="Help">
        <MenuItem id="helpButton" mnemonicParsing="false" onAction="#helpButtonClick" text="Help" />
        <MenuItem id="aboutButton" mnemonicParsing="false" onAction="#aboutButtonClick" text="About" />
      </Menu>
  </MenuBar>
  <ToolBar prefHeight="40.0" prefWidth="200.0">
    <ChoiceBox fx:id="choiceBox" onAction="#handlePenSizeChange" prefWidth="50.0">
      <items>
        <FXCollections fx:factory="observableArrayList">
          <String fx:value="1" />
          <String fx:value="2" />
          <String fx:value="3" />
          <String fx:value="4" />
          <String fx:value="5" />
          <String fx:value="6" />
          <String fx:value="8" />
          <String fx:value="10" />
        </FXCollections>
      </items>
    </ChoiceBox>
    <ColorPicker fx:id="colorPicker" onAction="#handleColorChange">
         <value>
            <Color />
         </value></ColorPicker>
  </ToolBar>
  <AnchorPane fx:id="anchorPane" prefHeight="236.0" prefWidth="640.0" VBox.vgrow="ALWAYS">
    <Label alignment="CENTER" layoutX="155.0" layoutY="177.0" style="&#10;" textAlignment="CENTER" textFill="#9f9f9f">
      <font>
        <Font size="18.0" />
      </font>
    </Label>
    <ScrollPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml">
      <Canvas fx:id="canvas" height="373.0" layoutX="7.0" width="640.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />
    </ScrollPane>
  </AnchorPane>
</VBox>
